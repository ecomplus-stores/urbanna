  "css": ".product__short-stock {\ndisplay: none !important;\n}\n.product__buy button {\nwidth: 100%;\nborder-radius: 5px;\n}\n.product__favorite {\nwidth: 100%;\nborder-radius: 5px;\n}\n#product-actions .btn.share {\ndisplay: none\n}\n.order-info__toggle {\n    display: none !important;\n}\n.brands-carousel .glide__track {\n  display: flex;\n  justify-content: center\n}\n.search-engine__filter--cor {\n   display: none !important;\n}\n.search-engine__filter--modelo {\n   display: none !important;\n}\n.search-engine__filter--age_group {\n   display: none !important;\n}\n.search-engine__filter--gender {\n   display: none !important;\n}",
  "html_head": "<!–Script do botão do Whatsapp –>\n<link rel=\"stylesheet\" href=\"https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css\">\n  <link href=\"https://fonts.googleapis.com/css2?family=Poppins:wght@400;500&display=swap\" rel=\"stylesheet\">\n  <style>\n    * {\n      font-family: 'Poppins', sans-serif;\n    }\n\n    .whatsapp-button {\n      position: fixed;\n      width: 60px;\n      height: 60px;\n      bottom: 40px;\n      right: 40px;\n      background-color: #25d366;\n      color: #FFF;\n      border-radius: 50px;\n      text-align: center;\n      font-size: 30px;\n      line-height: 60px;\n      box-shadow: 1px 1px 2px #888;\n      z-index: 1000;\n      transition: background-color 0.3s ease;\n    }\n\n    .whatsapp-button:hover {\n      background-color: #128c7e;\n      cursor: pointer;\n    }\n\n    .whatsapp-form {\n      display: none;\n      position: fixed;\n      bottom: 120px;\n      right: 40px;\n      width: 300px;\n      padding: 20px;\n      background-color: #FFF;\n      box-shadow: 1px 1px 2px #888;\n      border-radius: 5px;\n      z-index: 1000;\n    }\n\n    .whatsapp-form.active {\n      display: block;\n    }\n\n    .whatsapp-form input[type=\"text\"],\n    .whatsapp-form input[type=\"tel\"],\n    .whatsapp-form button,\n    .whatsapp-form label {\n      display: block;\n      margin-bottom: 10px;\n    }\n\n    .whatsapp-form input[type=\"text\"],\n    .whatsapp-form input[type=\"tel\"] {\n      width: 100%;\n      padding: 5px;\n      border: 1px solid #CCC;\n      border-radius: 4px;\n    }\n\n    .whatsapp-form input[type=\"tel\"]::placeholder {\n      color: #999;\n    }\n\n    .whatsapp-form label {\n      color: #999;\n      font-size: 14px;\n      margin-bottom: 5px;\n    }\n\n    .whatsapp-form button {\n      background-color: #25d366;\n      color: #FFF;\n      border: none;\n      padding: 10px 0;\n      width: 100%;\n      border-radius: 4px;\n      cursor: pointer;\n      text-align: center;\n    }\n\n    .whatsapp-form button:hover {\n      background-color: #128c7e;\n    }\n\n    .whatsapp-form label.checkbox {\n      display: flex;\n      align-items: center;\n      margin-bottom: 5px;\n    }\n\n    .whatsapp-form label.checkbox input[type=\"checkbox\"] {\n      margin-right: 5px;\n      vertical-align: middle;\n    }\n  </style>\n</head>\n<body>\n  <a href=\"#\" class=\"whatsapp-button\">\n    <i class=\"fab fa-whatsapp\" style=\"line-height: normal;\"></i>\n  </a>\n\n  <div class=\"whatsapp-form\">\n    <input type=\"text\" placeholder=\"Nome\" required>\n    <input type=\"tel\" placeholder=\"Ex: 22997269952\" required>\n    <label for=\"phone\" class=\"phone-label\">DDD + Telefone</label>\n    <button type=\"submit\" onclick=\"sendMessage()\">Enviar Mensagem</button>\n    <label class=\"checkbox\">\n      <input type=\"checkbox\" checked>\n      Desejo receber novidades pelo WhatsApp\n    </label>\n  </div>\n\n  <script>\n    const button = document.querySelector('.whatsapp-button');\n    const form = document.querySelector('.whatsapp-form');\n\n    button.addEventListener('click', function(e) {\n      e.preventDefault();\n      form.classList.toggle('active');\n    });\n\n    function sendMessage() {\n      const nameInput = document.querySelector('.whatsapp-form input[type=\"text\"]');\n      const phoneInput = document.querySelector('.whatsapp-form input[type=\"tel\"]');\n\n      const name = nameInput.value;\n      const phone = phoneInput.value;\n\n      const payload = {\n        name: name,\n        phone: phone,\n        origem: 'botao_ecommerce'\n      };\n\n      const url = 'https://4704c99907c388b426470b742934ce12.m.pipedream.net';\n\n      fetch(url, {\n        method: 'POST',\n        headers: {\n          'Content-Type': 'application/json'\n        },\n        body: JSON.stringify(payload)\n      })\n      .then(response => {\n        if (response.ok) {\n          window.open('https://wa.me/5522997269952', '_blank');\n          form.reset();\n          form.classList.remove('active');\n        } else {\n          throw new Error('Erro ao enviar a mensagem');\n        }\n      })\n      .catch(error => {\n        console.error(error);\n      });\n    }\n  </script>\n  <!– Fim Script do botão do Whatsapp –>",
